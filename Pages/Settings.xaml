<UserControl x:Class="Aurora.Pages.Settings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Aurora.Pages"
             mc:Ignorable="d">
    <Grid>
        <StackPanel>
            <TextBlock Text="Settings" FontSize="20"/>
            <TextBlock Text="Number of LEDs" Margin="0,15,0,0"/>
            <TextBox Style="{StaticResource FlatInput}"></TextBox>
            <TextBlock Text="LEDs direction" Margin="0,15,0,0"/>
            <ComboBox>
                <ComboBoxItem>Left</ComboBoxItem>
                <ComboBoxItem IsSelected="True">Right</ComboBoxItem>
            </ComboBox>
        </StackPanel>
    </Grid>
</UserControl>
