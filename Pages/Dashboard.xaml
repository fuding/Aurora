<UserControl x:Class="Aurora.Pages.Dashboard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Aurora.Pages"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <StackPanel Grid.Row="0">
                <TextBlock Text="Dashboard" FontSize="20"/>
                <TextBlock x:Name="scInfo"  Text=""/>
                <TextBlock x:Name="pixelInfo" Text=""/>
                <TextBlock x:Name="portsText" Text="" Margin="0,20,0,0"/>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Orientation="Horizontal">
                <Button Style="{StaticResource FlatButton}" Click="ButtonAction_Click">
                    <TextBlock x:Name="statusText" Margin="10" Text="Start service"/>
                </Button>
                <Button Style="{StaticResource FlatButton}" Click="ButtonCalibration_Click">
                    <TextBlock Margin="10" Text="Calibration"/>
                </Button>
                <Button Style="{StaticResource FlatButton}" Click="ButtonSettings_Click">
                    <TextBlock Margin="10" Text="Settings"/>
                </Button>
            </StackPanel>
            <StackPanel Grid.Column="1" VerticalAlignment="Bottom">
                <TextBlock TextAlignment="Right" x:Name="ticksCount" Text="Ticks: 0"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
