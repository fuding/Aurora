<Window x:Class="Aurora.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Aurora"
        mc:Ignorable="d"
        Title="Aurora"
        Height="550"
        MinHeight="550"
        Width="1200"
        MinWidth="1200"
        Background="#222425"
        Foreground="#fff"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="15">
        <StackPanel>
            <TextBlock x:Name="scTest"  Text=""/>
            <TextBlock x:Name="scWidth"  Text="Screen Width: 2000"/>
            <TextBlock x:Name="scHeight" Text="Screen Height: 2000"/>
        </StackPanel>
        <Image x:Name="scPreview"/>
    </Grid>
</Window>
